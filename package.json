{
  "name": "@gs377209/storybook-testing",
  "repository": {
    "url": "git+https://github.com/gs377209/storybook-testing.git"
  },
  "private": false,
  "version": "3.0.2",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/main.js",
  "module": "./dist/main.js",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "types": "dist/main.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b ./tsconfig.lib.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook:docs": "storybook build --docs",
    "prepublishOnly": "npm run build",
    "chromatic": "chromatic",
    "test-storybook": "test-storybook",
    "test-storybook:coverage": "test-storybook --coverage",
    "test": "playwright install && vitest",
    "test:coverage": "playwright install && vitest --coverage",
    "test-storybook-vite": "playwright install && vitest --project=storybook",
    "test-storybook-vite:coverage": "playwright install && vitest --project=storybook --coverage"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/js": "^9.21.0",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-designs": "^8.2.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-mdx-gfm": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/test-runner": "^0.22.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-v8": "^3.1.1",
    "axe-playwright": "^2.1.0",
    "chromatic": "^11.28.2",
    "eslint": "^9.24.0",
    "eslint-plugin-react-dom": "^1.48.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-react-x": "^1.48.3",
    "eslint-plugin-storybook": "^0.12.0",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^8.6.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.1",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vitest": "^3.0.8"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
